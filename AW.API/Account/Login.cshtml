@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AW.API.Models.UserToLogin
  
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Login" >
      
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="User"></label>
                    <input asp-for="User" class="form-control" />
                    <span asp-validation-for="User" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Attempt"></label>
                    <input asp-for="Attempt" class="form-control" />
                    <span asp-validation-for="Attempt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Log in</button>
                </div>
        
            </form>
</div>
    <div class="col-md-6 col-md-offset-2">  </div>
</div> 